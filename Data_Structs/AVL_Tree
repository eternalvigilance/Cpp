#include<iostream>
#include<cassert>
template<class K>
struct Node
{
	Node* _left;
	Node* _right;
	Node* _parent;
	K _key;
	int _bf;
	Node(const K& key)
		:_key(key),_left(nullptr),_right(nullptr),_parent(nullptr),_bf(0)
	{}
};
template<class K>
class AVL_Tree
{
	typedef Node<K> Node;
public:
	bool insert(const K& key)
	{
		if (_root == nullptr)
		{
			_root = new Node(key);
			return true;
		}
		Node* cur = _root;
		Node* parent = cur;
		while (cur)
		{
			if (key > cur->_key)
			{
				parent = cur;
				cur = cur->_right;
			}
			else if (key < cur->_key)
			{
				parent = cur;
				cur = cur->_left;
			}
			else
				return false;
		}
		cur = new Node(key);
		cur->_parent = parent;
		if (key > cur->_parent->_key)cur->_parent->_right = cur;
		else
			cur->_parent->_left = cur;
		update_bf(cur);
		return true;
	}
	void innorder()
	{
		if (_root == nullptr)std::cout << "NULL" << std::endl;
		else
		{
			_inorder(_root);
			std::cout << std::endl;
		}
	}
	Node* find(const K& key)
	{
		if (_root == nullptr)
		{
			std::cout << "NULL" << std::endl;
			return nullptr;
		}
		Node* cur = _root;
		while (cur)
		{
			if (key > cur->_key && cur->_right != nullptr)cur = cur->_right;
			else if (key < cur->_key && cur->_left != nullptr)cur = cur->_left;
			else
			{
				//std::cout << cur->_key << std::endl;
				return cur;;
			}
		}
		return nullptr;
	}
	bool erase(const K& key)
	{
		Node* node = find(key);
		assert(_root != nullptr);
		if (node == _root)
		{
			if (node->_left == nullptr && node->_right == nullptr)
			{
				_root = nullptr;
				delete node;
				node = nullptr;
				return true;
			}
			else
			{
				Node* leaf = _inherit(node);
				if (leaf != nullptr)
				{
					_erase(leaf);
					return true;
				}
				else
					return false;
			}
		}
		else if (node)
		{
			if (node->_left == nullptr && node->_right == nullptr)
			{
				_erase(node);
				return true;
			}
			else
			{
				Node* leaf = _inherit(node);
				_erase(leaf);
				return true;
				 
			}
		}
		else
		return false;
	}
	bool IsBalance()
	{

	}
private:
	Node* _root = nullptr;
	Node* _inherit(Node* node)
	{
		Node* leaf = node;
		if ((leaf->_bf == -1 || leaf->_bf == 0))
		{
			while (!(leaf->_left == nullptr && leaf->_right == nullptr))
			{
				leaf->_key = leaf->_left->_key;
				leaf = leaf->_left;
			}
			return leaf;
		}
		else if (leaf->_bf == 1)
		{
			leaf = leaf->_right;
			if (leaf->_left != nullptr)
			{
				while (!(leaf->_left == nullptr && leaf->_right == nullptr))
				{
					if(leaf->_left != nullptr)leaf = leaf->_left;
					else
					{
						Node* tmp = _inherit(leaf);
						return tmp;
					}
				}
				node->_key = leaf->_key;
				return leaf;
			}
			else
			{
				leaf->_key = leaf->_right->_key;
				return leaf;
			}
		}
	}
	bool _erase(Node* leaf)
	{
		if (leaf != nullptr)
		{
			if (leaf == leaf->_parent->_left)
			{
				Node* parent = leaf->_parent;
				leaf->_parent->_left = nullptr;
				delete leaf;
				leaf = nullptr;
				while (parent->_parent)
				{
					if (parent = parent->_parent->_left)parent->_bf++;
					else
						parent->_bf--;
					if (parent->_bf == 1 || parent->_bf == -1)break;
					else if (parent->_bf == 0)parent = parent->_parent;
					else if (parent->_bf == 2 || parent->_bf == -2)rotate(parent);
				}
				return true;
			}
			else if (leaf == leaf->_parent->_right)
			{
				Node* parent = leaf->_parent;
				leaf->_parent->_right = nullptr;
				delete leaf;
				leaf = nullptr;
				while (parent->_parent)
				{
					if (parent == parent->_parent->_right)parent->_bf--;
					else
						parent->_bf++;
					if (parent->_bf == 1 || parent->_bf == -1)break;
					else if (parent->_bf == 0)parent = parent->_parent;
					else if (parent->_bf == 2 || parent->_bf == -2)rotate(parent);
				}
				return true;
			}
			else
				return false;
		}
		else
			return false;
	}
	void _inorder(Node* node)
	{
		if (node == nullptr)return;
		if(node->_left != nullptr)_inorder(node->_left);
		std::cout << node->_key << " ";
		if (node->_right != nullptr)_inorder(node->_right);
	}
	bool RotateL()
	{
		
	}
	bool RotateR()
	{

	}
	bool RatateD()
	{

	}
	//bool rotate(Node* cur)
